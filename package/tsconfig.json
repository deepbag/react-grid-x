{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist",
      "module": "ESNext",
      "target": "ES6",
      "moduleResolution": "Node",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  